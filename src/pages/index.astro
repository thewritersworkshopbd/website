---
import MainLayout from "../layouts/Main.astro";
const title = "The Writers Workshop Bangladesh";
const slogan = "Express your creativity!";
---

<MainLayout
  title={title}
  description={slogan}
  socialImage="/images/social/index.png"
>
  <header class="hero">
    <div class="snow hero-content flex-col sm:flex-row">
      <div class="text-center sm:text-left">
        <h1 class="text-xl sm:text-4xl">{title}</h1>
        <h2 class="text-lg sm:text-3xl">{slogan}</h2>
        <p>This site is under constuction.</p>
        <p>Coming soon...</p>
      </div>
      <img
        src="/images/icon.webp"
        alt="Icon"
        width="200"
        height="160"
        class="m-auto drop-shadow-lg"
      />
    </div>
  </header>
</MainLayout>
